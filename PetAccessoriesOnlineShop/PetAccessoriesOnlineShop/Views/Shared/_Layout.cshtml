    <script>
        $(document).ready(function () {
            $('.owl-example').owlCarousel({
                loop: false,
                margin: 0,
                responsiveClass: true,
                autoplay: true,
                responsive: {
                    0: {
                        items: 1,
                        nav: true
                    },
                    600: {
                        items: 2,
                        nav: true
                    },
                    1000: {
                        items: 3,
                        nav: false,
                        loop: true,
                    }
                }
            })
            $('.owl-carousel').owlCarousel({
                loop: false,
                margin: 0,
                responsiveClass: true,
                navSpeed: false,
                dots: true,

                responsive: {
                    0: {
                        items: 2,
                        nav: true
                    },
                    600: {
                        items: 3,
                        nav: true
                    },
                    1000: {
                        items: 4,
                        nav: false,
                        loop: false,

                    }
                }
            })

            $("#all-list-product").show();
            $("#accessories-list-product").hide();
            $("#belts-list-product").hide();
            $("#cages-list-product").hide();
            $("#food-containers-list-product").hide();

            $("#all").click(function () {
                $("#all-list-product").show();

                $("#accessories-list-product").hide();
                $("#belts-list-product").hide();
                $("#cages-list-product").hide();
                $("#food-containers-list-product").hide();
            });
            $("#accessories").click(function () {
                $("#accessories-list-product").show();

                $("#all-list-product").hide();

                $("#belts-list-product").hide();
                $("#cages-list-product").hide();
                $("#food-containers-list-product").hide();
            });
            $("#belts").click(function () {
                $("#belts-list-product").show();

                $("#all-list-product").hide();
                $("#accessories-list-product").hide();

                $("#cages-list-product").hide();
                $("#food-containers-list-product").hide();
            });
            $("#cages").click(function () {
                $("#cages-list-product").show();

                $("#all-list-product").hide();
                $("#accessories-list-product").hide();
                $("#belts-list-product").hide();

                $("#food-containers-list-product").hide();
            });
            $("#food-containers").click(function () {
                $("#food-containers-list-product").show();
                $("#all-list-product").hide();
                $("#accessories-list-product").hide();
                $("#belts-list-product").hide();
                $("#cages-list-product").hide();
            });
        });
    </script>


